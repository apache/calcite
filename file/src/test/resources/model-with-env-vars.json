{
  "version": "1.0",
  "defaultSchema": "${CALCITE_SCHEMA_NAME:SALES}",
  "schemas": [
    {
      "name": "${CALCITE_SCHEMA_NAME:SALES}",
      "type": "custom",
      "factory": "org.apache.calcite.adapter.file.FileSchemaFactory",
      "operand": {
        "directory": "${CALCITE_DATA_DIR:sales}",
        "executionEngine": "${CALCITE_FILE_ENGINE_TYPE:LINQ4J}",
        "batchSize": "${CALCITE_BATCH_SIZE:1000}",
        "memoryThreshold": "${CALCITE_MEMORY_THRESHOLD:104857600}",
        "ephemeralCache": "${CALCITE_EPHEMERAL_CACHE:true}",
        "primeCache": "${CALCITE_PRIME_CACHE:false}",
        "recursive": "${CALCITE_RECURSIVE:false}",
        "tableNameCasing": "${CALCITE_TABLE_CASING:SMART_CASING}",
        "columnNameCasing": "${CALCITE_COLUMN_CASING:SMART_CASING}"
      }
    }
  ]
}
