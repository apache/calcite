!use scott
!set outputformat mysql

WITH RECURSIVE FactorialCTE(n, a) AS (
    SELECT 1, 1
    UNION ALL
    SELECT n + 1, a * (n + 1)
    FROM FactorialCTE
    WHERE n < 11
)
SELECT a FROM FactorialCTE WHERE n = 10;
+---------+
| A       |
+---------+
| 3628800 |
+---------+
(1 row)

!ok

WITH RECURSIVE FibonacciCTE(n, a, b) AS (
    SELECT 1, 0, 1
    UNION ALL
    SELECT n + 1, b, a + b
    FROM FibonacciCTE
    WHERE n < 10
)
