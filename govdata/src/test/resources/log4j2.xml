<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Enable DEBUG for Calcite SQL planning and execution -->
        <Logger name="org.apache.calcite.sql" level="WARN"/>
        <Logger name="org.apache.calcite.plan" level="WARN"/>
        <Logger name="org.apache.calcite.prepare" level="WARN"/>
        <Logger name="org.apache.calcite.jdbc" level="WARN"/>
        <Logger name="org.apache.calcite.adapter.file" level="DEBUG"/>
        <Logger name="org.apache.calcite.adapter.jdbc" level="WARN"/>
        <Logger name="org.apache.calcite.adapter.enumerable" level="WARN"/>

        <!-- Enable DEBUG for SEC adapter -->
        <Logger name="org.apache.calcite.adapter.sec" level="DEBUG"/>

        <!-- Reduce Parquet noise -->
        <Logger name="org.apache.parquet" level="WARN"/>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
