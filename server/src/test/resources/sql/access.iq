!use access
!set outputformat mysql

select user;
+------------------+
| USER             |
+------------------+
| happyCalciteUser |
+------------------+
(1 row)

!ok

# Create a basic table
create table t (i int, j int not null);
(0 rows modified)

!update

grant select, insert on table t to happyCalciteUser;
(0 rows modified)

!update

select * from t;
I INTEGER(10)
J INTEGER(10) NOT NULL
!type

insert into t values (1, 2);
(1 row modified)

!update

select * from t;
+---+---+
| I | J |
+---+---+
| 1 | 2 |
+---+---+
(1 row)

!ok

revoke select on t from happyCalciteUser;
(0 rows modified)

!update

select * from t;
java.sql.SQLException: Error while executing SQL "select * from t": At line 1, column 15: Not allowed to perform SELECT on [T]
!error

drop table t;
(0 rows modified)

!update

