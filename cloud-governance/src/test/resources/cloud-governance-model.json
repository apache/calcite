{
  "version": "1.0",
  "defaultSchema": "governance",
  "schemas": [
    {
      "name": "governance",
      "type": "custom",
      "factory": "org.apache.calcite.adapter.governance.CloudGovernanceSchemaFactory",
      "operand": {
        "providers": ["azure", "gcp", "aws"],
        "azure": {
          "tenantId": "${AZURE_TENANT_ID}",
          "clientId": "${AZURE_CLIENT_ID}",
          "clientSecret": "${AZURE_CLIENT_SECRET}",
          "subscriptionIds": ["${AZURE_SUBSCRIPTION_ID}"]
        },
        "gcp": {
          "projectIds": ["${GCP_PROJECT_ID}"],
          "credentialsPath": "${GOOGLE_APPLICATION_CREDENTIALS}"
        },
        "aws": {
          "accountIds": ["${AWS_ACCOUNT_ID}"],
          "region": "us-east-1",
          "accessKeyId": "${AWS_ACCESS_KEY_ID}",
          "secretAccessKey": "${AWS_SECRET_ACCESS_KEY}"
        },
        "cacheEnabled": true,
        "cacheTtlMinutes": 15
      }
    }
  ]
}